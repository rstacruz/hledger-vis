{
  "name": "hledger-vis",
  "description": "Web UI for hledger",
  "version": "1.0.0",
  "author": "Rico Sta. Cruz <rico@ricostacruz.com>",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-jsx",
      [
        "transform-react-jsx",
        {
          "pragma": "element"
        }
      ]
    ]
  },
  "bin": {
    "hledger-vis": "bin/hledger-vis"
  },
  "bugs": {
    "url": "https://github.com/rstacruz/hledger-vis/issues"
  },
  "config": {
    "bfy_options": "-t babelify"
  },
  "dependencies": {
    "get-port": "2.1.0",
    "hledger": "1.1.1",
    "jade": "1.11.0",
    "koa": "1.2.1",
    "koa-json": "1.1.3",
    "koa-router": "5.4.0",
    "koa-static": "2.0.0",
    "koa-views": "4.1.0",
    "meow": "3.7.0",
    "open": "0.0.5"
  },
  "devDependencies": {
    "autoprefixer": "6.4.0",
    "babel-plugin-syntax-jsx": "6.13.0",
    "babel-plugin-transform-react-jsx": "6.8.0",
    "babel-preset-es2015": "6.13.2",
    "babelify": "7.3.0",
    "browserify": "13.1.0",
    "decca": "2.1.0",
    "lodash": "4.14.1",
    "node-sass": "3.8.0",
    "nodemon": "1.10.0",
    "normalize.css": "4.2.0",
    "npm-run-all": "2.3.0",
    "postcss-cssnext": "2.7.0",
    "postcss-import": "8.1.2",
    "redux": "3.5.2",
    "watchify": "3.7.0"
  },
  "files": [
    "public",
    "lib",
    "bin",
    "views"
  ],
  "homepage": "https://github.com/rstacruz/hledger-vis#readme",
  "keywords": [
    "accounting",
    "hledger",
    "ledger",
    "visualization"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rstacruz/hledger-vis.git"
  },
  "scripts": {
    "build": "run-s build:js build:css",
    "build:css": "node-sass assets/css/style.scss | postcss -u autoprefixer > public/assets/style.css",
    "build:js": "browserify $npm_package_config_bfy_options lib/app/index.js -o public/assets/script.js",
    "start": "run-p watch:app watch:js watch:css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:app": "nodemon -q --exec \"node bin/hledger-vis --no-open --port ${PORT:=3000}\"",
    "watch:css": "nodemon -q --exec \"npm run build:css\" -e scss",
    "watch:js": "watchify -v $npm_package_config_bfy_options lib/app/index.js -o public/assets/script.js"
  }
}
